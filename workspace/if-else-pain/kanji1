#!/usr/bin/env python3
import sys
import subprocess
import re

if len(sys.argv) < 2:
    print("Usage: compiler <input.py> [-o <output>]")
    sys.exit(1)

input_file = sys.argv[1]
output_file = "a.out"
if "-o" in sys.argv:
    o_index = sys.argv.index("-o")
    if o_index + 1 < len(sys.argv):
        output_file = sys.argv[o_index + 1]
    else:
        print("❌ Output file not specified after -o")
        sys.exit(1)

with open(input_file) as f:
    raw_lines = f.readlines()

lines = [line.rstrip('\n') for line in raw_lines]

data_section = []
text_section = [
    "    .text",
    "    .global _start",
    "_start:"
]

variables = {}
functions = {}
data_count = 0

def add_data(val, add_newline=True):
    global data_count, data_section
    label = f"str{data_count}"
    real_str = val.encode('utf-8').decode('unicode_escape')
    if add_newline:
        real_str += "\n"
    bytes_list = [str(b) for b in real_str.encode('utf-8')]
    data_section.append(f"{label}:")
    for i in range(0, len(bytes_list), 10):
        chunk = bytes_list[i:i+10]
        data_section.append("    .byte " + ", ".join(chunk))
    data_section.append(f"{label}_len = . - {label}")
    data_count += 1
    return label

def emit_print(label):
    return [
        "    mov x0, #1",
        f"    adr x1, {label}",
        f"    mov x2, {label}_len",
        "    mov x8, #64",
        "    svc #0"
    ]

def eval_expr(expr, vars_dict):
    expr = expr.strip()

    chr_match = re.fullmatch(r'chr\s*\(\s*(.+)\s*\)', expr)
    if chr_match:
        val = eval_expr(chr_match.group(1), vars_dict)
        try:
            return chr(int(val))
        except:
            return None

    ord_match = re.fullmatch(r'ord\s*\(\s*(.+)\s*\)', expr)
    if ord_match:
        val = eval_expr(ord_match.group(1), vars_dict)
        if isinstance(val, str) and len(val) == 1:
            return ord(val)
        return None

    def repl_var(m):
        var = m.group(0)
        if var in vars_dict:
            v = vars_dict[var]
            return f'"{v}"' if isinstance(v, str) else str(v)
        return var

    expr_vars_re = re.compile(r'\b[a-zA-Z_][a-zA-Z0-9_]*\b')
    safe_expr = expr_vars_re.sub(repl_var, expr)

    try:
        return eval(safe_expr, {"__builtins__": {}})
    except:
        return None

def compile_lines(lines_to_compile, local_vars):
    global text_section, variables
    i = 0
    while i < len(lines_to_compile):
        line = lines_to_compile[i]
        stripped = line.strip()
        if not stripped or stripped.startswith("#"):
            i += 1
            continue

        # Conditional block
        if stripped.startswith("if ") or stripped.startswith("elif ") or stripped == "else:":
            condition_met = False
            while i < len(lines_to_compile):
                line = lines_to_compile[i].strip()
                if line.startswith("if ") or line.startswith("elif "):
                    condition = line.split(":", 1)[0].split(" ", 1)[1].strip()
                    result = eval_expr(condition, local_vars)
                    i += 1
                    block = []
                    while i < len(lines_to_compile) and lines_to_compile[i].startswith("    "):
                        block.append(lines_to_compile[i][4:])
                        i += 1
                    if result and not condition_met:
                        compile_lines(block, local_vars.copy())
                        condition_met = True
                    continue
                elif line == "else:":
                    i += 1
                    block = []
                    while i < len(lines_to_compile) and lines_to_compile[i].startswith("    "):
                        block.append(lines_to_compile[i][4:])
                        i += 1
                    if not condition_met:
                        compile_lines(block, local_vars.copy())
                    break
                else:
                    break
            continue

        # Variable assignment
        if "=" in stripped and not stripped.startswith("print") and not stripped.startswith("def") and not stripped.endswith("()"):
            name, expr = [x.strip() for x in stripped.split("=", 1)]
            val = expr[1:-1] if (expr.startswith('"') and expr.endswith('"')) or (expr.startswith("'") and expr.endswith("'")) else eval_expr(expr, local_vars)
            if val is None:
                print(f"❌ Unknown or invalid expression for variable '{name}': {expr}")
                sys.exit(1)
            local_vars[name] = val
            i += 1
            continue

        # Print statement
        if stripped.startswith("print(") and stripped.endswith(")"):
            args = [a.strip() for a in stripped[6:-1].split(",")]
            combined_str = ""
            for arg in args:
                val = arg[1:-1] if (arg.startswith('"') and arg.endswith('"')) or (arg.startswith("'") and arg.endswith("'")) else eval_expr(arg, local_vars)
                if val is None:
                    print(f"❌ Unknown variable or invalid expression in print: {arg}")
                    sys.exit(1)
                combined_str += (" " if combined_str else "") + str(val)
            label = add_data(combined_str, add_newline=True)
            text_section += emit_print(label)
            i += 1
            continue

        # Function call
        if re.match(r'^[a-zA-Z_][a-zA-Z0-9_]*\(\)$', stripped):
            func_name = stripped[:-2]
            if func_name not in functions:
                print(f"❌ Call to undefined function: {func_name}")
                sys.exit(1)
            compile_lines(functions[func_name], {**variables, **local_vars})
            i += 1
            continue

        print(f"❌ Unsupported or unknown line: {line}")
        sys.exit(1)

# Function definition parsing
i = 0
while i < len(lines):
    line = lines[i]
    if line.strip().startswith("def ") and line.strip().endswith("():"):
        func_name = line.strip()[4:-3].strip()
        i += 1
        func_body = []
        while i < len(lines):
            next_line = lines[i]
            if next_line.startswith("    "):
                func_body.append(next_line[4:])
                i += 1
            elif next_line.strip() == "":
                i += 1
            else:
                break
        functions[func_name] = func_body
    else:
        compile_lines([line], variables)
        i += 1

# Exit syscall
text_section += [
    "    mov x0, #0",
    "    mov x8, #93",
    "    svc #0"
]

asm = [".data"] + data_section + [""] + text_section

with open("out.s", "w") as f:
    f.write("\n".join(asm) + "\n")

subprocess.run(["as", "-o", "out.o", "out.s"], check=True)
subprocess.run(["ld", "out.o", "-o", output_file], check=True)

print(f"✅ Compiled to {output_file}")
